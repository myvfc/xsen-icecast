<icecast>
  <location>XSEN Network</location>
  <admin>admin@xsen.fun</admin>

  <security>
    <changeowner>
      <user>nobody</user>
      <group>nogroup</group>
    </changeowner>
  </security>

  <listen-socket>
    <port>${PORT}</port>
  </listen-socket>

  <authentication>
    <source-password>XSEN_SOURCE_PW</source-password>
    <admin-password>XSEN_ADMIN_PW</admin-password>
    <relay-password>XSEN_RELAY_PW</relay-password>
  </authentication>

  <limits>
    <clients>100</clients>
    <sources>5</sources>
  </limits>

  <mount>
    <mount-name>/xsen-live</mount-name>
    <public>0</public>
  </mount>
</icecast>
